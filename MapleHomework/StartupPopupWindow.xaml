        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="5" Opacity="0.5" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- í—¤ë” -->
            <Border Grid.Row="0" Background="#33FFFFFF" CornerRadius="16,16,0,0" Padding="20,16" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal">
