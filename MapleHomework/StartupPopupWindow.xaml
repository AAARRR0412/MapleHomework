                            Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <ui:SymbolIcon Symbol="Dismiss24" FontSize="18" Foreground="#888888"/>
                    </Button>
                </Grid>
            </Border>

            <!-- ìˆ™ì œ ëª©ë¡ -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20,15">
                <ItemsControl ItemsSource="{Binding CharacterTasks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#22FFFFFF" CornerRadius="10" Padding="16,12" Margin="0,0,0,12">
                                <StackPanel>
                                    <!-- ìºë¦­í„° ì •ë³´ -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <Border x:Name="PopupAvatar" Width="40" Height="40" CornerRadius="20" ClipToBounds="True" Margin="0,0,12,0">
                                            <Border.Background>
                                                <ImageBrush Stretch="UniformToFill"
                                                            ImageSource="{Binding DataContext.ImageUrl, ElementName=PopupAvatar, TargetNullValue={x:Null}, FallbackValue={x:Null}}">
                                                    <ImageBrush.RelativeTransform>
                                                        <ScaleTransform CenterX="0.5" CenterY="0.55" ScaleX="3.5" ScaleY="3.5"/>
                                                    </ImageBrush.RelativeTransform>
                                                </ImageBrush>
                                            </Border.Background>
                                        </Border>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Nickname}" Foreground="White" FontSize="15" FontWeight="Bold"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Lv." Foreground="#5AC8FA" FontSize="11"/>
                                                <TextBlock Text="{Binding Level}" Foreground="#AABBCC" FontSize="11" Margin="2,0,8,0"/>
                                                <TextBlock Text="{Binding CharacterClass}" Foreground="#888888" FontSize="11"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <Border Background="#FF3B30" CornerRadius="10" Padding="8,3" Margin="12,0,0,0" VerticalAlignment="Center"
                                                Visibility="{Binding HasPendingTasks, Converter={StaticResource BoolToVis}}">
                                            <TextBlock Text="{Binding PendingCount}" Foreground="White" FontSize="11" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- ë¯¸ì™„ë£Œ ìˆ™ì œ ëª©ë¡ -->
                                    <ItemsControl ItemsSource="{Binding PendingTasks}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="6" Padding="10,6" Margin="0,0,6,6"
                                                        Background="{Binding CategoryColor}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding CategoryIcon}" FontSize="11" Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding TaskName}" Foreground="White" FontSize="12" FontWeight="Medium"/>
