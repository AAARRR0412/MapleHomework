<Application x:Class="MapleHomework.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:converters="clr-namespace:MapleHomework.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="PretendardFont">./Fonts/#Pretendard</FontFamily>
            
            <!-- 대시보드용 컨버터 -->
            <converters:ProgressToWidthConverter x:Key="ProgressToWidthConverter"/>
            <converters:TasksToTooltipConverter x:Key="TasksToTooltipConverter"/>

            <Style TargetType="{x:Type Window}">
                <Setter Property="FontFamily" Value="{StaticResource PretendardFont}"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontFamily" Value="{StaticResource PretendardFont}"/>
            </Style>

            <Style TargetType="{x:Type CheckBox}">
                <Setter Property="FontFamily" Value="{StaticResource PretendardFont}"/>
            </Style>

            <Style TargetType="{x:Type ToolTip}">
                <Setter Property="FontFamily" Value="{StaticResource PretendardFont}"/>
                <Setter Property="OverridesDefaultStyle" Value="True"/>
                <Setter Property="HasDropShadow" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToolTip">
                            <Border Background="#252526" BorderBrush="#3E3E42" BorderThickness="1" 
                                    CornerRadius="8" Padding="16,12" Margin="5">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.4"/>
                                </Border.Effect>
                                <TextBlock Text="{TemplateBinding Content}" Foreground="#E0E0E0" FontSize="13" 
                                           FontFamily="{StaticResource PretendardFont}" LineHeight="22"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 투명 스크롤바 스타일 (전역) -->
            <Style x:Key="TransparentScrollBarThumb" TargetType="Thumb">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="#44FFFFFF" CornerRadius="4"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="TransparentScrollBar" TargetType="ScrollBar">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Width" Value="8"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ScrollBar">
                            <Grid Background="Transparent">
                                <Track x:Name="PART_Track" IsDirectionReversed="true">
                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource TransparentScrollBarThumb}"/>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="TransparentScrollViewer" TargetType="ScrollViewer">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ScrollViewer">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ScrollContentPresenter/>
                                <ScrollBar x:Name="PART_VerticalScrollBar" Grid.Column="1"
                                           Style="{StaticResource TransparentScrollBar}"
                                           Value="{TemplateBinding VerticalOffset}"
                                           Maximum="{TemplateBinding ScrollableHeight}"
                                           ViewportSize="{TemplateBinding ViewportHeight}"
                                           Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>