<Window x:Class="MapleHomework.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="OverlayWindow"
        Width="300" Height="Auto" SizeToContent="Height"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Border CornerRadius="12" Padding="16" Margin="5" Opacity="{Binding OverlayOpacity}">
        <Border.Background>
            <SolidColorBrush Color="#1E1E2E"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.5" Color="Black"/>
        </Border.Effect>
        
        <StackPanel>
            <!-- 헤더 -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <ui:SymbolIcon Symbol="ClipboardTask24" FontSize="20" Foreground="#5AC8FA" Margin="0,0,10,0"/>
                <TextBlock Text="오늘의 숙제" Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                <Border Background="#FF3B30" CornerRadius="8" Padding="8,3" Margin="10,0,0,0" VerticalAlignment="Center"
                        Visibility="{Binding HasTasks, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{Binding TaskCount}" Foreground="White" FontSize="12" FontWeight="Bold"/>
                </Border>
            </StackPanel>

            <!-- 숙제 목록 -->
            <ItemsControl ItemsSource="{Binding Tasks}" MaxHeight="250">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#33FFFFFF" CornerRadius="6" Padding="10,8" Margin="0,0,0,6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- 카테고리 색상 인디케이터 -->
                                <Border Width="4" CornerRadius="2" Background="{Binding CategoryColor}" Margin="0,0,10,0"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding CharacterName}" Foreground="#AABBCC" FontSize="11"/>
                                    <TextBlock Text="{Binding TaskName}" Foreground="White" FontSize="13" FontWeight="Medium"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- 모두 완료 메시지 -->
            <TextBlock Text="✨ 모든 숙제 완료!" Foreground="#4CD964" FontSize="14" FontWeight="Medium"
                       HorizontalAlignment="Center" Margin="0,5,0,0"
                       Visibility="{Binding AllDone, Converter={StaticResource BoolToVis}}"/>
        </StackPanel>
    </Border>
</Window>
